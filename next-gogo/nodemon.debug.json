{
  "watch": ["src/server/**/*.ts"],
  "verbose": true,
  "debug": false,
  "execMap": {
    "ts": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' node --inspect -r ts-node/register"
  },
  "ignore": [
    "node_modules",
    "__test__",
    "**/*.d.ts",
    "*.spec.ts",
    "docs/*"
  ],
  "events": {
    "restart": "echo \"restart!!! \""
  },
  "ext": "ts",
  "inspect": true
}